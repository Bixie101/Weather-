@model IEnumerable<UserRegistration.Models.TourismDestination>

    @{
        ViewData["Title"] = "Tourism Destinations";
    }
<style>
    body {
        background-image: url("../../Content/Images/image3.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        background-position: center;
    }

    h1 {
        color: white;
        font-size: 45px;
        padding-top: 0;
        padding-bottom: 2%;
        text-align: center;
        margin: auto;
    }
</style>
    <h1>Tourism Destinations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Country</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Country</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="@Url.Action($"Edit/{@item.Id}", "TourismDestination")" asp-controller="TourismDestination" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a href="@Url.Action($"Delete/{@item.Id}", "TourismDestination")" asp-controller="TourismDestination" asp-action="Edit" asp-route-id="@item.Id"asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create">Create New</a>

